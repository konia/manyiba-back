doctype html
html(lang="en")
  head
    //- meta声明
    block head-meta
      meta(charset='UTF-8')
      meta(name="renderer" content="webkit")
      meta(name="force-rendering" content="webkit")
      meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
      meta(name='format-detection', content='telephone=no')
      meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
    //- 标题声明
    block head-area-title

    //- 引入CSS区域
    link(href='https://cdn.bootcss.com/twitter-bootstrap/4.3.1/css/bootstrap.min.css' rel='stylesheet')
    link(rel="stylesheet" href="./css/style.min.css" type="text/css")

    //- 头部script执行
    script(src='https://cdn.bootcss.com/html5shiv/r29/html5.min.js')
    script(src='https://cdn.bootcss.com/jquery/3.4.1/jquery.min.js')
    script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js')
    script(src='https://cdn.bootcss.com/nestable2/1.6.0/jquery.nestable.min.js')
    script(src='https://cdn.bootcss.com/twitter-bootstrap/4.3.1/js/bootstrap.min.js')
    script(src='./js/index.js' type='text/javascript')
    script(src='./js/drag.js' type='text/javascript')
    script(src='./js/lib/jquery.slimscroll.js' type='text/javascript')

    block head-area-extra-script

  body.fix-header.fix-sidebar.card-no-border
    #main-wrapper
      include ../component/header.pug
      include ../component/aside.pug
      include ../component/aside-right.pug
      block body-area-container
